{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "dryRun": false,
        "paths": [
            "src/test/features/"
        ],
        "require": [
            "src/test/Steps/*.ts",
            "src/test/hooks/*.ts"
            
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format":[
            "progress-bar",
            "html:test-results/reports/cucumber-report.html",
            "json:test-results/reports/cucumber-report.json"
        ]
       
    }
}